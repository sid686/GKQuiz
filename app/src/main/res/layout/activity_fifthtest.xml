<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.girish.gkquiz.fifthtest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:background="#d3ecfc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIME:  "
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#33bdef"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:00"
            android:textColor="#33bdef"
            android:textSize="24sp"
            android:textStyle="bold"
            />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/question41"
            android:paddingBottom="10dip"
            android:textColor="@color/Black"
            android:textStyle="bold"/>
        <RadioGroup
            android:id="@+id/q1_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
            android:orientation="vertical"
            android:paddingBottom="30dip">
            <RadioButton
                android:id="@+id/q1a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="India"
                />
            <RadioButton
                android:id="@+id/q1a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Britain"
                />
            <RadioButton
                android:id="@+id/q1a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="France"
                />
            <RadioButton
                android:id="@+id/q1a4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spain"
                />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question42"
            android:paddingBottom="10dip"
            android:textColor="@color/Black"
            android:textStyle="bold"/>
        <RadioGroup
            android:id="@+id/q2_group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
            android:orientation="vertical"
            android:paddingBottom="30dip">
            <RadioButton
                android:id="@+id/q2a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leg bye"
                />
            <RadioButton
                android:id="@+id/q2a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bye"
                />
            <RadioButton
                android:id="@+id/q2a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="drive"/>
            <RadioButton
                android:id="@+id/q2a4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="None of the above" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question43"
            android:paddingBottom="10dip"
            android:textColor="@color/Black"
            android:textStyle="bold"/>
        <RadioGroup
            android:id="@+id/q3_group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
            android:orientation="vertical"
            android:paddingBottom="30dip">
            <RadioButton
                android:id="@+id/q3a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delhi"
                />
            <RadioButton
                android:id="@+id/q3a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beijing"
                />
            <RadioButton
                android:id="@+id/q3a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sydney"/>
            <RadioButton
                android:id="@+id/q3a4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="London" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question44"
            android:paddingBottom="10dip"
            android:textColor="@color/Black"
            android:textStyle="bold"/>
        <RadioGroup
            android:id="@+id/q4_group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
            android:orientation="vertical"
            android:paddingBottom="30dip">
            <RadioButton
                android:id="@+id/q4a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Largest"
                />
            <RadioButton
                android:id="@+id/q4a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Smallest"
                />
            <RadioButton
                android:id="@+id/q4a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appropriate for national need"/>
            <RadioButton
                android:id="@+id/q4a4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="None of the above" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question45"
            android:paddingBottom="10dip"
            android:textColor="@color/Black"
            android:textStyle="bold"/>
        <RadioGroup
            android:id="@+id/q5_group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
            android:orientation="vertical"
            android:paddingBottom="30dip">
            <RadioButton
                android:id="@+id/q5a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Surat (Gujarat)"
                />
            <RadioButton
                android:id="@+id/q5a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tarapur (Maharashtra)"
                />
            <RadioButton
                android:id="@+id/q5a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trombay (Maharashtra))"/>
            <RadioButton
                android:id="@+id/q5a4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solapur (Maharashtra)" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question46"
            android:paddingBottom="10dip"
            android:textColor="@color/Black"
            android:textStyle="bold"/>
        <RadioGroup
            android:id="@+id/q6_group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
            android:orientation="vertical"
            android:paddingBottom="30dip">
            <RadioButton
                android:id="@+id/q6a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="an electron gun"
                />
            <RadioButton
                android:id="@+id/q6a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="an atomic pile"
                />
            <RadioButton
                android:id="@+id/q6a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a transistor"/>
            <RadioButton
                android:id="@+id/q6a4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a Wilson cloud chamber" />
        </RadioGroup>

        <TextView
