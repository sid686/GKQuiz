            android:paddingBottom="30dip">
            <RadioButton
                android:id="@+id/q10a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Court"
                />
            <RadioButton
                android:id="@+id/q10a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ring"
                />
            <RadioButton
                android:id="@+id/q10a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arena"/>
            <RadioButton
                android:id="@+id/q10a4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rink" />
