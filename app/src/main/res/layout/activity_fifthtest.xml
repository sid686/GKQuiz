        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@drawable/custombtn"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

    </LinearLayout>

</ScrollView>
