            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
            android:orientation="vertical"
            android:paddingBottom="30dip">
            <RadioButton
                android:id="@+id/q7a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Air India"
                />
            <RadioButton
                android:id="@+id/q7a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Family planning"
                />
            <RadioButton
                android:id="@+id/q7a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Culture and Civilization"/>
            <RadioButton
                android:id="@+id/q7a4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="None of the above" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question48"
            android:paddingBottom="10dip"
            android:textColor="@color/Black"
            android:textStyle="bold"/>
        <RadioGroup
            android:id="@+id/q8_group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
            android:orientation="vertical"
            android:paddingBottom="30dip">
            <RadioButton
                android:id="@+id/q8a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="It always lets the steam escape"
                />
            <RadioButton
                android:id="@+id/q8a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="High pressure crushes the hard covering of rice grains"
                />
            <RadioButton
                android:id="@+id/q8a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="It does not let the heat energy escape easily"/>
            <RadioButton
                android:id="@+id/q8a4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="High pressure raises the boiling point of water" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question49"
            android:paddingBottom="10dip"
            android:textColor="@color/Black"
            android:textStyle="bold"/>
        <RadioGroup
            android:id="@+id/q9_group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
            android:orientation="vertical"
            android:paddingBottom="30dip">
            <RadioButton
                android:id="@+id/q9a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Two internal refractions before emerging out of the drop"
                />
            <RadioButton
                android:id="@+id/q9a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One internal refractions before emerging out of the drop"
                />
            <RadioButton
                android:id="@+id/q9a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No internal refraction"/>
            <RadioButton
                android:id="@+id/q9a4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Either one or two internal refractions before emerging out of the drop" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question50"
            android:paddingBottom="10dip"
            android:textColor="@color/Black"
            android:textStyle="bold"/>
        <RadioGroup
            android:id="@+id/q10_group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
